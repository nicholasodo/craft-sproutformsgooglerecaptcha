{% includeJsResource 'sproutformsgooglerecaptcha/js/script.js' %}

{{ forms.textField({
    label: 'Site Key',
    required: true,
    id: 'siteKey',
    name: 'siteKey',
    value: settings.siteKey|default('')
}) }}

{{ forms.textField({
    label: 'Secret Key',
    required: true,
    id: 'secreyKey',
    name: 'secreyKey',
    value: settings.secreyKey|default('')
}) }}
